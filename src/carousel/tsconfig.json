{
  "compilerOptions": {
    "declaration": true,
    "outDir": "../../dist/carousel",
    "sourceMap": false,
    "rootDir": "./",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
