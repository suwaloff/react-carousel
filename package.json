{
  "name": "react-carousel-ts",
  "version": "1.1.0",
  "private": false,
  "description": "A lightweight carousel component for React applications that allows users to cycle through images or content cards.",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "main": "dist/carousel/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suwaloff/react-carousel.git"
  },
  "author": "Suvalau Ihar",
  "keywords": [
    "react slider",
    "react library",
    "carousel",
    "slider",
    "image slider",
    "image carousel"
  ],
  "scripts": {
    "build:npm": "tsc -p src/carousel && copyfiles -u 1 \"src/carousel/**/*.css\" dist",
    "build:dev": "webpack --env mode=development",
    "build:prod": "webpack --env mode=production",
    "build:prod:analyzer": "webpack --env mode=production analyzer=true",
    "start": "webpack serve --env port=5000 "
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20.11.21",
    "@types/react": "^18.2.60",
    "@types/react-dom": "^18.2.19",
    "@types/webpack": "^5.28.5",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@types/webpack-dev-server": "^4.7.2",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.10.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.8.1",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-plugin-css-modules": "^5.1.0",
    "webpack": "^5.90.3",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
